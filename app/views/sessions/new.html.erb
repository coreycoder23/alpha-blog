<h1 class="text-center mt-4 mb-4">Log in</h1>

<div class="container">
    <%= form_with(scope: :session, url: login_path, class: "shadow rounded p-3 mb-3 bg-secondary text-white", local: true) do |form| %>
      <div class="row justify-content-center">
        <div class="col-md-10">
        </div>
          <br>
          <div class="form-group row justify-content-center mb-4">
            <%= form.label :email, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
            </div>
          </div>
          <br>
          <div class="form-group row">
            <%= form.label :password, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
            </div>
          </div>
          <br>
          <div class="form-group row justify-content-center mb-3">
            <div class="col-10 text-center">
              <%= form.submit "Log in", class: "btn btn-outline-light btn-lg mt-3" %>
            </div>
          </div>
          <br>
          <div class="form-group row justify-content-center">
            <div class="col-10 text-center mb-4">
              <%= link_to "[ Cancel and return to articles ]", articles_path, class: "text-light" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>