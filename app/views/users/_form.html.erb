<div class="container">
  <div class="shadow p-3 mb-3 bg-info rounded">
    <%= form_with(model: @user, local: true) do |form| %>
      <%= render 'shared/errors', object: @user %>
      <div class="row justify-content-center">
        <div class="col-md-10">
          <div class="form-group row">
            <%= form.label :username, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
            </div>
          </div>
          <br>
          <div class="form-group row justify-content-center">
            <%= form.label :email, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
            </div>
          </div>
          <br>
          <div class="form-group row">
            <%= form.label :password, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
            </div>
          </div>
          <br>
          <div class="form-group row justify-content-center">
            <div class="col-10 text-center">
              <%= form.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
            </div>
          </div>
          <br>
          <div class="form-group row justify-content-center">
            <div class="col-10 text-center mb-4">
              <%= link_to "[ Cancel and return to articles ]", articles_path, class: "text-light" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
